@using PurchasePortal.Web.Models.DTOs.PromotionCategory


@model UpdatePromotionCategoryDto


            <div class="modal-header">
    <h5 class="modal-title" id="editPromotionCategoryModalLabel">Update Promotion Category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="Edit" asp-controller="PromotionCategory" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <div class="mb-3">
                        <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" class="form-control" id="Name" required />
                    </div>
                    <div class="mb-3">
                        <div class="form-check">
                <input type="checkbox" asp-for="isActive" class="form-check-input"  checked="@Model.isActive" />
                <label class="form-check-label" asp-for="isActive">Is Active</label>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Save</button>
                </form>
            </div>
