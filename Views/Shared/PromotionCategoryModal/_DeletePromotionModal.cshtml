@using PurchasePortal.Web.Models.DTOs.PromotionCategory
@model DeletePromotionDto

<div class="modal-header">
    <h5 class="modal-title" id="deletePromotionCategoryModalLabel">Delete Promotion Category</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <p>Are you sure you want to delete the Promotion <strong>@Model.Name</strong>?</p>
</div>
<div class="modal-footer">
    <form asp-action="Delete" asp-controller="PromotionCategory" method="post">
        <input type="hidden" name="Id" value="@Model.Id" />
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
</div>


