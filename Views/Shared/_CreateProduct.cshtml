@using PurchasePortal.Web.Models.DTOs.Product
<!-- Add Product Modal -->
@model CreateProduct


<form id="addProductForm" asp-action="Create" asp-controller="Product" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="modal-header">
                    <h5 class="modal-title" id="addProductModalLabel">Add Product</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Add form fields here for Name, Description, Price, StockQuantity, CategoryId -->
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label> * 
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Price" class="form-label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Discount" class="form-label"></label>
                        <input asp-for="Discount" class="form-control" />
                        <span asp-validation-for="Discount" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="StockQuantity" class="form-label"></label>
                        <input asp-for="StockQuantity" class="form-control" />
                        <span asp-validation-for="StockQuantity" class="text-danger"></span>
                    </div>                    
                    <div class="mb-3">
                        <div class="form-group">
                            <label asp-for="ImageFile" class="control-label">Image</label>
                            <input asp-for="ImageFile" type="file" class="form-control" />
                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="CategoryId" class="form-label"></label>
                        <select asp-for="CategoryId" class="form-control" id="CategoryId">
                            <option value="" selected disabled >-- Select Category --</option>
                            @foreach (var category in (SelectList)ViewData["Categories"])
                            {
                                <option value="@category.Value">@category.Text</option>
                            }
                        </select>
                    </div>
                    
                    <div class="mb-3">
@* 
                        <label asp-for="CategoryId" class="form-label"></label>
                        <select asp-for="CategoryId" class="form-control" id="CategoryId">
                            <option value="" selected disabled >-- Select Promotion Category --</option>
                            @foreach (var category in (SelectList)ViewData["PromotionCategories"])
                            {
                                <option value="@category.Value">@category.Text</option>
                            }
                        </select>
             *@
                        <label>Promotion Categories</label>
                        <hr />
                        @foreach (var pc in ViewData["PromotionCategories"] as SelectList)
                        {
                        <div class="form-check form-check-inline">
                            <label class="form-check-label">@pc.Text</label>
                    <input class="form-check-input" type="checkbox" name="SelectedPromotions" value="@pc.Value" />
                        </div>
                        }
                        <hr />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="resetFormAndInfo('addProductForm')">Close</button>
                    <button type="submit" class="btn btn-primary">Add Product</button>
                </div>
            </form>
